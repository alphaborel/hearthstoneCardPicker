<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Hearthstone card deck</title>
</head>

<body>
  <form action="/cards" method="post">
    <input type="number" name="mana" placeholder="Mana"><br>
    <input type="number" name="attack" placeholder="Attack"><br>
    <input type="number" name="health" placeholder="Health"><br>
    <input type="text" name="description" placeholder="Name/Description"><br>
    <button type="submit">New Card</button>
  </form>

  <h3>Your current list:</h3>
  <% for(var i = 0; i<deck.length; i++){ %>
    <div>
      <hr>
      <p>Mana:<%= deck[i].mana %></p>
      <p>Attack:<%= deck[i].attack %></p>
      <p>Health:<%= deck[i].health %></p>
      <p>Description:<%= deck[i].description %></p>
    </div>
    <% } %>

    <hr>
    <h3>All cards:</h3>
    <% for(var i = 0; i<cards.length; i++){ %>
      <div>
        <hr>
        <p>Mana:
          <%= cards[i].mana %>
        </p>
        <p>Attack:
          <%= cards[i].attack %>
        </p>
        <p>Health:
          <%= cards[i].health %>
        </p>
        <p>Description:
          <%= cards[i].description %>
        </p>
        <a href="/cards/<%= cards[i].id %>">Add to List</a>

      </div>
      <% } %>
</body>

</html>
